<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Login"
    android:background="@drawable/first_interface">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:id="@+id/imgUpwork"
        android:src="@drawable/final_logo"
      android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"

        >
    </ImageView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendorButton"
        android:layout_below="@id/imgUpwork"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:height="60dp"
       android:background="@drawable/round_blue_button"
        android:layout_marginTop="30dp"
        android:text="vendor"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        >
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userButton"
        android:layout_below="@id/vendorButton"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:height="60dp"
        android:background="@drawable/round_blue_button"
        android:layout_marginTop="5dp"
        android:text="user"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        >
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpwork"
        android:layout_below="@id/userButton"
        android:layout_centerHorizontal="true"
        android:text="UPWORK"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="270dp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textSize="20sp"
        >

    </TextView>
</RelativeLayout>