<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Login"
    android:background="@drawable/user_login"

    tools:context=".VendorLoginActivity">


    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        >
    </TextView>
    <TextView
        android:id="@+id/txtBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_upwork"
        android:layout_below="@id/txtWelcome"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_marginStart="30dp"
        >

    </TextView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:id="@+id/imgUser"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@id/txtBack"
        >
        </ImageView>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_username"
        android:inputType="text"
        android:layout_below="@id/imgUser"
        android:layout_marginTop="65dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="6dp"
        android:textColor="#000000"
        android:maxLength="25"
        android:maxLines="1"
        android:autofillHints="Enter">
    </EditText>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:layout_below="@id/etUsername"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:padding="6dp"
        android:maxLength="25"
        android:maxLines="1"
        android:autofillHints="Enter">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:id="@+id/forgotPassword"
        android:layout_below="@id/etPassword"
        android:layout_marginStart="235dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/button_color"
        >

    </TextView>
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgotPassword"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:text="@string/login"
        android:background="@drawable/round_blue_button"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        >
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtOr"
        android:layout_below="@id/loginButton"
        android:text="@string/or"
        android:textColor="@color/button_color"
        android:textSize="20sp"
        android:layout_marginStart="186dp"
        android:layout_marginTop="10dp"
        >

    </TextView>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtOr"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/round_blue_button"
        android:textColor="@color/white"
        >
    </Button>
</RelativeLayout>